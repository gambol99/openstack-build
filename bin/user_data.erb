hostname <%= @options[:hostname] %>
sed -i 's/HOSTNAME=.*/HOSTNAME=<%= @options[:hostname] %>/' /etc/sysconfig/network

cat <<EOF > /etc/resolv.conf
domain <%= @host.domain %>
search <%= @host.domain %>
<%- YAML.load(@host.params["resolver::nameservers"]).each do |ns| -%>
nameserver <%= ns %>
<%- end -%>
EOF

<%= snippet 'bootstrap_puppet' %>
